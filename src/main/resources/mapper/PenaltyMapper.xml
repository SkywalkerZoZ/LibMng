<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xdc5.libmng.mapper.PenaltyMapper">

    <insert id="addPenalty" parameterType="com.xdc5.libmng.entity.Penalty" useGeneratedKeys="true" keyProperty="penaltyId">
        INSERT INTO Penalty (adminId, userId, penaltyDate, endDate
        <trim prefix="," suffixOverrides=",">
            <if test="reason != null">
                reason
            </if>
        </trim>
        )
        VALUES (
        #{adminId}, #{userId}, NOW(), #{endDate}
        <trim prefix="," suffixOverrides=",">
            <if test="reason != null">
                #{reason}
            </if>
        </trim>

        )
    </insert>

    <select id="getPenalty" parameterType="com.xdc5.libmng.entity.Penalty" resultType="com.xdc5.libmng.entity.Penalty">
        SELECT penaltyId,adminId,userId,reason,penaltyDate,endDate
        FROM Penalty
        <where>
            <if test="penaltyId != null">
                AND penaltyId=#{penaltyId}
            </if>
            <if test="adminId != null">
                AND adminId=#{adminId}
            </if>
            <if test="userId!= null">
                AND userId=#{userId}
            </if>
            <if test="reason !=null">
                AND reason=#{reason}
            </if>
            <if test="penaltyDate !=null">
                AND penaltyDate=#{penaltyDate}
            </if>
            <if test="endDate !=null">
                AND endDate=#{endDate}
            </if>
        </where>
    </select>

    <delete id="delPenaltyById">
        DELETE FROM Penalty WHERE penaltyId=#{penaltyId}
    </delete>

    <update id="updatePenalty" parameterType="com.xdc5.libmng.entity.Penalty">
        UPDATE Penalty
        <set>
            <if test="reason != null">reason = #{reason},</if>
            <if test="endDate != null">endDate = #{endDate},</if>
        </set>
        WHERE penaltyId = #{penaltyId}
    </update>

</mapper>